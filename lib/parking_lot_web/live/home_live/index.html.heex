<section :for={{id, canvas} <- @canvas} :if={canvas} class="row">
  <canvas
    id={"preview_#{id}"}
    data-image={canvas.image}
    width={canvas.width}
    height={canvas.height}
    phx-hook="DrawCanvas"
    style="
      max-width: 100%;
      object-fit: contain;
      width: 100% !important;
      height: auto !important;
    "
  />
</section>
